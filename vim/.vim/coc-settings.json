{
  "python.jediEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "python3",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "graphql"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  },
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  }
}
